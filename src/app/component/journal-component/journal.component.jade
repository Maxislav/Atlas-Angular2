div.content
    div
        .close((click)="onClose()") &times;
        .row
            p Devices
        .row
            p.pointer(*ngFor="let device of deviceList; let i = index;", [ngClass]="{'selected': device === deviceSelected}", (click)="onSelectDevice(device)") {{device.name}}
        .row
            .title-row
                p

                .steps
                    .back.btn((click)="stepGo(-1)") &#9668;
                    .date {{selectDate | date: 'dd/MM/yyyy'}}
                    .forward.btn((click) = "stepGo(1)") &#9658;
        .scroll
            .row(*ngFor="let item of list; let i = index;")
                div
                    one-track([track]="list[i]")

