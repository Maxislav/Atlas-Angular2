table
    tr
        td.button.menu((click)="onOpenAthlete()")
            .flex
                .satellite.ico
                .name На связи
        td.button.menu( (click)="onOpen()" )
            .flex
                .routs.ico
                .name Маршруты
        td.button.weather([class.active]="weatherLayer")
            .weather-ico((click)="onWeather()")
        td.fill-space
        td.bell((click)="goToFriends()")
            .num(*ngIf="invites.length") {{invites.length}}
        td.icoUser()
            img([src]="user.image || 'src/img/no-avatar.gif' ", (click)="goToProfile()")
        td.button.enter( (click)="onOpenLogin()")
            |{{user.name || 'Войти' }}
menu-athlete(*ngIf="menuService.menuAthlete")
menu-track(*ngIf="menuService.menuOpen")
track-list(*ngIf="trackList.length", [style.top]="menuService.menuOpen ?  '150px' : '100%' ")
menu-login(*ngIf="menuService.menuOpenLogin")

