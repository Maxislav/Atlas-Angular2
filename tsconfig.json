{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "dist/",
    "typeRoots" : ["src/types.d.ts"]
  },
  "include": [
    "src/types.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "server"
  ]
}
